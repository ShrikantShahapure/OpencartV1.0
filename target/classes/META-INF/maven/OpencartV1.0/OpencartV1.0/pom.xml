<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<!-- Project Information -->
	<groupId>OpencartV1.0</groupId>
	<artifactId>OpencartV1.0</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<build>
    <plugins>

        <!-- Compiler Plugin -->
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.15.0</version>
            <configuration>
                <source>17</source>
                <target>17</target>
            </configuration>
        </plugin>

        <!-- Surefire Plugin -->
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>3.2.5</version>
            <configuration>
                <suiteXmlFiles>
                    <suiteXmlFile>master.xml</suiteXmlFile>
                </suiteXmlFiles>
            </configuration>
        </plugin>

    </plugins>
</build>



	<dependencies>

		<!-- ================= SELENIUM ================= -->
		<!-- Purpose: Web UI automation
             Used for: Browser control, element interaction, waits -->
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>4.27.0</version> <!-- UPDATED to support Chrome 144 -->
		</dependency>

		<!-- ================= TEST EXECUTION ================= -->
		<!-- Purpose: Test framework
             Used for: Test annotations, execution, parallel runs -->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>7.9.0</version>
			<scope>test</scope>
		</dependency>

		<!-- ================= EXCEL (DATA DRIVEN TESTING) ================= -->
		<!-- Purpose: Read/write Excel (.xls) files -->
		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi</artifactId>
			<version>5.2.5</version>
		</dependency>

		<!-- Purpose: Read/write Excel (.xlsx) files
             Rule: Must be same version as poi -->
		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi-ooxml</artifactId>
			<version>5.2.5</version>
		</dependency>

		<!-- ================= LOGGING ================= -->
		<!-- Purpose: Logging API
             Used for: info, debug, error logs -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-api</artifactId>
			<version>2.25.3</version>
		</dependency>

		<!-- Purpose: Log4j implementation
             Rule: Version must match log4j-api -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>2.25.3</version>
		</dependency>

		<!-- ================= SLF4J BRIDGE (SINGLE BINDING) ================= -->
		<!-- Purpose: Route SLF4J logs to Log4j2 -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-slf4j-impl</artifactId>
			<version>2.25.3</version>
		</dependency>

		<!-- ================= FILE HANDLING ================= -->
		<!-- Purpose: File utilities
             Used for: Screenshot saving, file copy -->
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.15.1</version>
		</dependency>

		<!-- ================= JAVA UTILITIES ================= -->
		<!-- Purpose: Utility methods
             Used for: String utils, random data, null safety -->
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.14.0</version>
		</dependency>

		<!-- ================= REPORTING ================= -->
		<!-- Purpose: HTML test reports
             Used for: Execution summary, screenshots, logs -->
		<dependency>
			<groupId>com.aventstack</groupId>
			<artifactId>extentreports</artifactId>
			<version>5.1.1</version>
		</dependency>

		<!-- ================= DRIVER MANAGEMENT ================= -->
		<!-- Purpose: Automatically manage browser drivers
             Used for: Avoid Chrome/Driver version mismatch -->
		<dependency>
			<groupId>io.github.bonigarcia</groupId>
			<artifactId>webdrivermanager</artifactId>
			<version>5.9.2</version>
		</dependency>

	</dependencies>

</project>