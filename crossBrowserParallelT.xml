<?xml version="1.0" encoding="UTF-8"?>
<suite name="CrossBrowserSuite" parallel="tests" thread-count="2">

	<listeners>
		<listener class-name="utilites.ExtentReportManager" />
	</listeners>

	<test name="ChromeTest">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="testCases.TC001_AccountRegistrationTest" />
		</classes>
	</test>

	<test name="EdgeTest">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="testCases.TC001_AccountRegistrationTest" />
		</classes>
	</test>

</suite>



<!-- @Parameters({"browser"}) → needed for cross‑browser testing (injects 
	browser choice). parallel="tests" → needed for parallel testing (runs them 
	at the same time). -->